@model RubyHouseWeb.Models.AddCategoryVM
@using (Ajax.BeginForm("Add", "Category", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnSuccessAdd" }, new { @class = "form-horizontal", @id = "formAdd" }))
{
    @Html.AntiForgeryToken();
    <div class="form-group">
        <label class="col-sm-4 control-label">Tên danh mục</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-4 control-label"> Hiển thị menu</label>
        <div class="col-sm-8">
            <input type="checkbox" id="showMenu" checked/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-4 control-label">Chọn số thứ tự menu</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.DisplayOrder, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-4 control-label"> Danh mục cha</label>
        <div class="col-sm-8">
            <input type="checkbox" id="levelCategory" name="levelCategory" checked/> &nbsp;
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-4 control-label">Chọn danh mục cha</label>
        <div class="col-sm-8">
            <select class="form-control" id="parentCategory" name="parentCategory" readonly>
                <option value="">Chọn</option>
                @if (Model.categories != null && Model.categories.Any())
                {
                    foreach(var item in Model.categories)
                    {
                        <option value="@item.ID">@item.CategoryName</option>
                    }
                }
            </select>
        </div>
    </div>
}
