@model RubyHouseWeb.Models.Category.AddCategoryVM
@using (Ajax.BeginForm("Add", "Category", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnSuccessAdd" }, new { @class = "form-horizontal", @id = "formAdd" }))
{
    @Html.AntiForgeryToken();
    <div class="form-group">
        <label class="col-sm-3 control-label">Tên sản phẩm</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">
            <input type="checkbox" id="showMenu"/> &nbsp; Hiển thị menu
        </label>
        <div class="col-sm-9">
            @Html.TextBoxFor(m => m.DisplayOrder, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">Giá</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
        </div>
    </div>
}
