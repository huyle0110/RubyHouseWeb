<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>Ruby House Admin</title>

    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,600,700' rel='stylesheet' type='text/css'>

    <!-- Primary vendor style -->
    @Styles.Render("~/bundles/font-awesome/css")
    @Styles.Render("~/bundles/animate/css")

    @if (IsSectionDefined("Styles"))
    {@RenderSection("Styles", required: false)}

    @Styles.Render("~/bundles/plugin/css")
    @Styles.Render("~/bundles/homer/css")
    @Styles.Render("~/bundles/site/css")

    @RenderSection("css", required: false)
</head>
<body>
    <!-- Header -->
    <div id="header">
        @Html.Partial("_Header")
    </div>

    <!-- Navigation -->
    <aside id="menu">
        @Html.Partial("_Navigation")
    </aside>
    <!-- Main view  -->
    <div id="wrapper">
        @RenderBody()
        @Html.Partial("_Footer")
    </div>
    @Scripts.Render("~/bundles/jquery/js")
    @Scripts.Render("~/bundles/plugin/js")
    @Scripts.Render("~/bundles/homer/js")

    <!-- Handler for local scripts -->
    @RenderSection("scripts", required: false)
    <script>
        // empty modal sau khi đóng
        $('.modal-sub').on('hidden.bs.modal', function () {
            $(this).find('.modal-body').empty();
        });
        var icon_next = '<i class="fa fa-angle-double-right" aria-hidden="true"></i>';
        var icon_review = '<i class="fa fa-angle-double-left" aria-hidden="true"></i>';
    </script>
    @*<div class="splash">
            <div class="color-line"></div><div class="splash-title"><img src="~/Content/SystemImage/loading-bars.svg" width="64" height="64"> </div>
        </div>*@
</body>

</html>