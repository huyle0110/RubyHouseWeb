@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Blank.cshtml";
}
@model RubyHouseWeb.Areas.Admin.Models.LoginModel
<div class="login-container">
    <div class="row">
        <div class="col-md-12">
            <div class="text-center m-b-md">
                <h3>Ruby Shop</h3>
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <p class="text-danger">@ViewBag.Message</p>
                }
            </div>
            <div class="hpanel">
                <div class="panel-body">
                    <form id="loginForm" action="login" method="post">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label class="control-label" for="username">Tên đăng nhập</label>
                            @Html.TextBoxFor(m => m.UserName, new {@class="form-control", @title= "Vui lòng nhập tên đăng nhập của bạn" })
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="password">Mật khẩu</label>
                            <input type="password" title="Vui lòng nhập mật khẩu của bạn" placeholder="******" required="" value="" name="Password" id="password" class="form-control">
                        </div>
                        <button class="btn btn-success btn-block">Đăng nhập</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            <strong>TheCao</strong> - 2017 Bản quyền của Logich
        </div>
    </div>
</div>
